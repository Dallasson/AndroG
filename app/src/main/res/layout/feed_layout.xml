<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feedRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- ExoPlayer -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/black" />

    <!-- Top-Left Logo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JellyJelly"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_gravity="top|start"
        android:background="#66000000" />

    <!-- Bottom-Left Views -->
    <TextView
        android:id="@+id/viewsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 views"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:padding="8dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="20dp"
        android:background="#66000000" />

    <!-- Right Side Icon Stack -->
    <LinearLayout
        android:id="@+id/rightIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:padding="4dp">

        <ImageView
            android:id="@+id/btnVolume"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:padding="10dp"
            android:src="@drawable/sound_on"
            android:background="@drawable/circle_background"
            android:contentDescription="Volume"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btnX"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:padding="10dp"
            android:src="@drawable/x"
            android:background="@drawable/circle_background"
            android:contentDescription="Twitter Share"
            app:tint="@color/white"/>

        <ImageView
            android:id="@+id/btnCopyLink"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/link"
            android:background="@drawable/circle_background"
            android:contentDescription="Copy Link"
            app:tint="@color/white"/>
    </LinearLayout>

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="start|center_vertical"
        android:padding="12dp"
        android:src="@drawable/left"
        android:contentDescription="Previous" />

    <!-- Next Arrow -->
    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end|center_vertical"
        android:padding="12dp"
        android:src="@drawable/right"
        android:contentDescription="Next" />

</FrameLayout>
